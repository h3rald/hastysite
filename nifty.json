{
  "storage": "packages",
  "commands": {
    "install": {
      "git+src": {
        "cmd": "git clone {{src}} --depth 1"
      },
      "git+src+tag": {
        "cmd": "git clone --branch {{tag}} {{src}} --depth 1"
      }
    },
    "update": {
      "git+name": {
        "cmd": "git pull",
        "pwd": "{{name}}"
      }
    }
  },
  "packages": {
    "hastyscribe": {
      "name": "hastyscribe",
      "git": true,
      "src": "https://github.com/h3rald/hastyscribe.git"
    },
    "min": {
      "name": "min",
      "git": true,
      "src": "https://github.com/h3rald/min.git"
    },
    "commandeer": {
      "name": "commandeer",
      "src": "https://github.com/fenekku/commandeer.git",
      "git": true
    },
    "moustachu": {
      "name": "moustachu",
      "src": "https://github.com/h3rald/moustachu",
      "git": true
    }
  }
}